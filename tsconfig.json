{
  "compilerOptions": {
    "outDir": "./build/",
    "declarationDir": "./types/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}